<% if @project.user_id == current_user.id %>
<p id="notice"><%= notice %></p>
<div class="form-inputs">
<h3>
  <strong>Name:</strong>
  <%= @project.name %>
</h3>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>
</div>

<%= link_to 'Edit', edit_project_path(@project), :class => 'btn btn-xs btn-default' %>
<%= link_to 'Back', projects_path, :class => 'btn btn-xs btn-default' %>
<hr>
<h3>Tasklists</h3>
<% @project.tasklists.each do |tasklist| %>
 <div class="well">
<p><strong><%= tasklist.name %></strong></p>
 </div>
<% end %>
<h4>Add tasklist</h4>
<%= form_for([@project, @project.tasklists.build]) do |f| %>
<p>
<%= f.label :name %> <br>
<%= f.text_field(:name, :class => 'form-control') %>
</p>
<p>
 <%= f.button :submit, :class => 'btn btn-default' %>
</p>
<% end %>
<% else %>
<h1>You are not allowed to visit this page</h1>   
<%= link_to 'Back', projects_path, :class => 'btn btn-xs btn-default' %>
<% end %>